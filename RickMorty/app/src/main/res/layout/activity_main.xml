<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgpersonaje"
        android:layout_width="161dp"
        android:layout_height="191dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/personajes" />

    <ImageView
        android:id="@+id/imglocalizacion"
        android:layout_width="164dp"
        android:layout_height="183dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgpersonaje"
        app:srcCompat="@drawable/localizaciones" />

    <ImageView
        android:id="@+id/imgepisodios"
        android:layout_width="157dp"
        android:layout_height="188dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgpersonaje"
        app:srcCompat="@drawable/episodios" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:text="Personajes"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/tsxto2"
        android:textColorLink="@color/texto1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imgpersonaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="177dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Localizacion"
        android:textAlignment="center"
        android:textColor="@color/tsxto2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglocalizacion" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158dp"
        android:layout_height="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Episodios"
        android:textAlignment="center"
        android:textColor="@color/tsxto2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgepisodios" />

</androidx.constraintlayout.widget.ConstraintLayout>